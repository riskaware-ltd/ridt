{
    "dispersion_model": "eddy_diffusion",

    "time_units": "s",
    "spatial_units": "m",
    "concentration_units": "kgm-3",
    "exposure_units": "mgminm-3",

    "time_samples": 50,
    "total_time": 10.0,


    "total_air_change_rate": 1.0,
    "fresh_air_change_rate": 5.0,
    "modes": {
        "instantaneous": {
            "sources":{
                "source_1": {
                    "x": 1.0,
                    "y": 1.0,
                    "z": 1.0,
                    "mass": {
                        "array": [0.01, 0.1, 1.0]
                    },
                    "time": 1.0
                }
            }
        },

        "infinite_duration": {
            "sources": {
                "source_1": {
                    "x": 1.0,
                    "y": 1.0,
                    "z": 1.0,
                    "rate": 0.01,
                    "time": 1.0
                }
            }
        },

        "fixed_duration": {
            "sources": {
                "source_1": {
                    "x": 1.0,
                    "y": 1.0,
                    "z": 1.0,
                    "rate": 0.01,
                    "start_time": 1.0,
                    "end_time": 5.0
                }
            }
        }
    },

    "thresholds": {
        "concentration": [
            1e-10,
            1e-5,
            1e-2,
            1e-1,
            1.0
        ],
        "exposure": [
            1e-10,
            1e-5,
            1e-2,
            1e-1,
            1.0
        ]
    },

    "models":{
        "eddy_diffusion": {
            "dimensions": {
                "x": 3.0,
                "y": 3.0,
                "z": 3.0
            },
            "spatial_samples": {
                "x": 10,
                "y": 10,
                "z": 10 
            },
            "coefficient": {
                "calculation": "TKEB",
                "value": 0.001,    
                "tkeb": {
                    "number_of_supply_vents": 1
                }
            },
            "images": {
                "quantity": 3,
                "max_error": 1.0
            },
            "analysis": {
                "percentage_exceedance": 10.0,
                "maximum_anywhere": {
                    "all_points": true,
                    "all_lines": true,
                    "all_planes": true,
                    "all_domain": true
                },
                "threshold_percentage": {
                    "all_points": true,
                    "all_lines": true,
                    "all_planes": true,
                    "all_domain": true
                },
                "threshold_anywhere": {
                    "all_points": true,
                    "all_lines": true,
                    "all_planes": true,
                    "all_domain": true
                },
                "maximum_percentage": {
                    "all_points": true,
                    "all_lines": true,
                    "all_planes": true,
                    "all_domain": true
                }
            },
            "monitor_locations": {
                "points": {
                    "point_1": {
                        "x": 1.0,
                        "y": 1.0,
                        "z": 1.0
                    },
                    "point_2": {
                        "x": 2.0,
                        "y": 2.0,
                        "z": 2.0
                    }
                },
                "lines": {
                    "line_1": {
                        "point": {
                            "x": 1.5,
                            "y": 1.5,
                            "z": 1.5
                        },
                        "parallel_axis": "x"
                    }
                },
                "planes": {
                    "plane_1": {
                        "axis": "xy",
                        "distance": 1.0
                    }
                },
                "domain": {
                    "domain": true 
                }
            },
            "point_plots": {
                "output": false
            },
            "line_plots": {
                "output": false,
                "spatial_resolution": 10.0
            },
            "contour_plots": {
                "output": false,
                "concentration": true,
                "exposure": true,
                "creation_frequency": 0.01,
                "number_of_contours": 10,
                "range": "auto",
                "scale": "linear",
                "contours": {
                    "min": 1.0,
                    "max": 1.5
                }
            }
        },
        "well_mixed": {
            "volume": 1.0
        }
    }
