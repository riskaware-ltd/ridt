{
    "eddy_diffusion": true,
    "well_mixed": true,

    "spatial_units": "m",
    "concentration_units": "kg.m-3",
    "exposure_units": "kg.s.m-3",
    "mass_units": "kg",

    "time_units": "s",
    "time_samples": 50,
    "total_time": 100.0,

    "fresh_air_change_rate_units": "m3.s-1",
    "fresh_air_change_rate": 1.0,

    "modes": {
        "instantaneous": {
            "sources":{
                "source_1": {
                    "x": 0.5,
                    "y": 0.5,
                    "z": 0.5,
                    "mass": {
                        "min": 0.0,
                        "max": 5.0,
                        "num": 30
                    },
                    "time": 0.0
                }
            }
        },

        "infinite_duration": {
            "sources": {
                "source_1": {
                    "x": 0.5,
                    "y": 0.5,
                    "z": 0.5,
                    "rate": 0.01,
                    "time": 0.0
                }
            }
        },

        "fixed_duration": {
            "sources": {
                "source_1": {
                    "x": 0.5,
                    "y": 0.5,
                    "z": 0.5,
                    "rate": 0.01,
                    "start_time": 1.0,
                    "end_time": 0.0
                }
            }
        }
    },

    "thresholds": {
        "concentration": [
            1e-10,
            1e-5,
            1e-2,
            1e-1,
            1.0
        ],
        "exposure": [
            1e-10,
            1e-5,
            1e-2,
            1e-1,
            1.0
        ]
    },

    "models":{
        "eddy_diffusion": {
            "dimensions": {
                "x": 1.0,
                "y": 1.0,
                "z": 1.0
            },
            "spatial_samples": {
                "x": 20,
                "y": 20,
                "z": 10
            },
            "coefficient": {
                "calculation": "TKEB",
                "value": 0.001,
                "tkeb": {
                    "bound": "lower",
                    "total_air_change_rate": 1.0,
                    "number_of_supply_vents": 1
                }
            },
            "images": {
                "mode": "manual",
                "quantity": 3,
                "max_error": 1.0
            },
            "analysis": {
                "percentage_exceedance": 10.0,
                "exclude_uncertain_values": true
            },
            "monitor_locations": {
                "evaluate": {
                    "points": true,
                    "lines": true,
                    "planes": true,
                    "domain": false
                },
                "points": {
                    "point_1": {
                        "x": 1.0,
                        "y": 1.0,
                        "z": 1.0
                    }
                },
                "lines": {
                },
                "planes": {
                    "plane_1": {
                        "axis": "xy",
                        "distance": 1.0
                    }
                },
                "domain": {
                    "domain": true
                }
            },
            "points_plots": {
                "output": false,
                "scale": "logarithmic",
                "number": 10
            },
            "lines_plots": {
                "output": false,
                "scale": "logarithmic",
                "animate": true,
                "number": 50
            },
            "planes_plots": {
                "output": false,
                "concentration": true,
                "exposure": true,
                "animate": true,
                "number": 10,
                "number_of_contours": 10,
                "range": "auto",
                "scale": "logarithmic",
                "contours": {
                    "min": 0.0,
                    "max": 1.5
                }
            }
        },
        "well_mixed": {
            "volume": 1.0
        }
    }
}